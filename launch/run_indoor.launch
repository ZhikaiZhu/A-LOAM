<launch>
    
    <!-- if 1, do mapping 10 Hz, if 2, do mapping 5 Hz. Suggest to use 1, it will adjust frequence automaticlly -->
    <param name="mapping_skip_frame" type="int" value="1" />

    <!-- Config Path -->
    <arg name="config_path" default="$(find aloam_velodyne)/config/config_indoor.yaml" />
    
    
    <node pkg="aloam_velodyne" type="apointProcess" name="apointProcess" output="screen">
        <param name="config_file" type="string" value="$(arg config_path)" />
    </node>

    <node pkg="aloam_velodyne" type="alaserOdometry" name="alaserOdometry" output="screen">
        <param name="config_file" type="string" value="$(arg config_path)" />
    </node>

    <!--<node pkg="aloam_velodyne" type="alaserMapping" name="alaserMapping" output="screen">
        <param name="config_file" type="string" value="$(arg config_path)" />
    </node>-->

    <node pkg="aloam_velodyne" type="lidarMapping" name="lidarMapping" output="screen">
        <param name="config_file" type="string" value="$(arg config_path)" />
    </node>

    <arg name="rviz" default="true" />
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find aloam_velodyne)/rviz_cfg/aloam_velodyne_modifier.rviz" />
    </group>

</launch>
